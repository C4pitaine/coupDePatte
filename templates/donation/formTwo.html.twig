{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <div class="slide donationTwo">
        <div class="left">
            <div class="wrapper">
                <div class="slideFormulaire">
                    <img src="/logo/Union.png" alt="Logo de coup de patte">
                    <div class="formulaire">
                        <a href="{{path('donation_one_update',{'id':donation.id})}}" class='backButton'>Retour</a>
                        <h4>Montant : {{donation.montant}}€</h4>
                        <h4>Adresse e-mail : {{donation.email}}</h4>
                        <h4>Nom / Prénom : {{donation.lastName}} {{donation.firstName}}</h4>
                        {{form_start(formTwo)}}
                            {{form_widget(formTwo)}}
                            <div class="buttonFormulaire">
                                <button type="submit">Payer</button>
                            </div>
                        {{form_end(formTwo)}}
                    </div>
                </div>
            </div>
        </div>
        <div class="right"></div>
    </div>
{% endblock %}