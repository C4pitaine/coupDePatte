{% extends 'base.html.twig' %}

{% block title %}Parrainage{% endblock %}

{% block body %}
    <div class="slide" id="profil">
        <div class="wrapper">
            <div class="headerAccount">
                <i class="fa-solid fa-user"></i>
                <h6>{{user.lastName}} {{user.firstName}}</h6>
                {% for label, messages in app.flashes %}
                    <div class="container mt-3 p-0">
                        <div class="alert alert-{{label}}">
                            {% for message in messages %}
                                <p>{{ message | raw }}</p>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% include "partials/_searchFiltre.html.twig" %}
            <h5>Vos parrainages : </h5>
            <div class="favoris">
                {% if pagination.data %}
                    {% for parrainage in pagination.data %}
                            {% for animal in parrainage.animal %}
                                {% if animal.adopted %}
                                    <div class="favoriAdopted">
                                        <img src="/uploads/animal/{{animal.coverImage}}" alt="Image de {{animal.name}}">
                                        <div class="showAdopted">
                                            <div class="deleteFav deleteButton">X</div>
                                            <h4>{{animal.name}}</h4>
                                            <p>A trouvé une famille</p>
                                        </div>
                                        {% include "partials/deleteAlert.html.twig" with {'type':'de vos favoris','title':animal.name, 'id':favori.id, 'route':'favori_delete'} %}
                                    </div>
                                {% else %}
                                    <div class="favori">
                                        <img src="/uploads/animal/{{animal.coverImage}}" alt="Image de {{animal.name}}">
                                        <div class="show">
                                            <div class="deleteFav deleteButton">X</div>
                                            <h4>{{animal.name}}</h4>
                                            {% if animal.genre == "male" %}
                                                <p>mâle</p>
                                            {% else %}
                                                <p>femelle</p>
                                            {% endif %}
                                            <p>{{animal.age}} ans</p>
                                            <p>Parrainage : {{parrainage.montant}}€</p>
                                            <a href="{{path('animal_show',{'id':animal.id})}}" class="backButton">Voir plus</a>
                                        </div>
                                        {% include "partials/deleteAlert.html.twig" with {'type':'de vos parrainages','title':animal.name, 'id':parrainage.id, 'route':'parrainage_delete'} %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                    {% endfor %}
                {% else %}
                    <h3>Vous n'avez pas encore de parrainages ou aucun parrainages ne correspond à votre recherche</h3>
                {% endif %}
                
            </div>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let favoris = document.querySelectorAll('.favori')
        let show = document.querySelectorAll('.show')

        favoris.forEach((favori,index)=>{
            favori.addEventListener('click',()=>{
                show[index].classList.toggle('active');
            })
            favori.addEventListener('mouseover',()=>{
                show[index].classList.add('active')
            })
            favori.addEventListener('mouseout',()=>{
                show[index].classList.remove('active')
            })
        })
    </script>
{% endblock %}
