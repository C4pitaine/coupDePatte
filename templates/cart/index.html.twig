{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="slide panier">
        <div class="wrapper">
            <div class="slideFormulaire">
                <img src="/logo/Union.png" alt="Logo de coup de patte">
                <div class="formulaire">
                    <a href="{{path('home')}}" class='backButton'>Retour Ã  l'accueil</a>
                    <h6>Panier</h6>
                    <div class="cart">
                        
                    </div>
                    <div class="total mb-3">

                    </div>
                    {{form_start(formCart)}}
                        {{form_widget(formCart)}}
                        <div class="buttonFormulaire">
                            <button type="submit" class="cartSubmit">Payer</button>
                        </div>
                    {{form_end(formCart)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{encore_entry_script_tags('achat')}}
    {% if app.user %}
        <script>
            document.querySelector('#cart_name').value = "{{app.user.lastName}}"
            document.querySelector('#cart_firstName').value = "{{app.user.firstName}}"
            document.querySelector('#cart_email').value = "{{app.user.email}}"
        </script>
    {% endif %}
{% endblock %}
