{% extends "admin/base.html.twig" %}

{% block title %}Modification d'un user{% endblock %}

{% block body %}
    <div class="slideAdmin">
        <div class="wrapper">
            <div class="form">
                <div class="titleBack">
                    <h2>Modification d'un user</h2>
                    <a href="{{path('admin_user_index')}}" class="btn btn-secondary">Retour</a>
                </div>
                {{form_start(myForm)}}
                    {{form_widget(myForm)}}
                    <button type="submit" class="btn btn-primary">Modifier</button>
                {{form_end(myForm)}}
            </div>
        </div>
    </div>
{% endblock %}