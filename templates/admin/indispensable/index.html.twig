{% extends 'admin/base.html.twig' %}

{% block title %}Indispensables{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="mt-5 mb-3">Gestion des Indispensables</h1>
            <a href="{{path('admin_indispensable_create')}}" class="btn btn-success mb-2">Ajout d'un indispensable</a>
            {% include "admin/partials/_search.html.twig" %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for indispensable in pagination.data %}
                        <tr>
                            <td>{{indispensable.id}}</td>
                            <td>{{indispensable.title}}</td>
                            <td class="text-center"> 
                                
                            </td>
                        </tr>
                        
                    {% endfor %}
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}

