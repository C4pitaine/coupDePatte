{% extends 'admin/base.html.twig' %}

{% block title %}Donations{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="mt-5 mb-3">Gestion des commandes</h1>
            {% include "admin/partials/_searchFiltre.html.twig" %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Email</th>
                        <th>Adresse</th>
                        <th>Code postal</th>
                        <th>Ville</th>
                        <th>Pays</th>
                        <th>Statut</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for donation in pagination.data %}
                        <tr>
                            <td>{{donation.id}}</td>
                            <td>{{donation.lastName}}</td>
                            <td>{{donation.firstName}}</td>
                            <td>{{donation.email}}</td>
                            <td>{{donation.adresse}}</td>
                            <td>{{donation.codePostal}}</td>
                            <td>{{donation.ville}}</td>
                            <td>{{donation.pays}}</td>
                            <td>{{donation.status}}</td>
                            <td class="text-center"> 
                                <div class="btn btn-danger deleteButton mb-2"><i class="fas fa-trash"></i></div>
                            </td>
                        </tr>
                        {% include "admin/partials/deleteAlert.html.twig" with {'type':'des donations','title':"La donation de " ~ donation.lastName ~ ' ' ~ donation.firstName, 'id':donation.id, 'route':'admin_donation_delete'} %}
                    {% endfor %} 
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}