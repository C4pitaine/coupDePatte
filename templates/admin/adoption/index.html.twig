{% extends 'admin/base.html.twig' %}

{% block title %}Adoptions{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="mt-5 mb-3">Gestion des adoptions</h1>
            {% include "admin/partials/_searchFiltre.html.twig" %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Age</th>
                        <th>Genre</th>
                        <th>Race</th>
                        <th>Image</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for adoption in pagination.data %}
                        <tr>
                            <td>{{adoption.id}}</td>
                            <td>{{adoption.name}}</td>
                            <td>{{adoption.type}}</td>
                            <td>{{adoption.age}}</td>
                            <td>{{adoption.genre}}</td>
                            <td>{{adoption.race}}</td>
                            <td>{{adoption.image}}</td>
                            <td class="text-center"> 
                                {# <a href="{{path('admin_article_update',{'id':article.id})}}" class="btn btn-warning mb-2"><i class="fas fa-edit"></i></a>
                                <a href="{{path('admin_article_show',{'id':article.id})}}" class="btn btn-primary mb-2"><i class="fas fa-eye"></i></a> #}
                                <div class="btn btn-danger deleteButton mb-2"><i class="fas fa-trash"></i></div>
                            </td>
                        </tr>
                        {# {% include "admin/partials/deleteAlert.html.twig" with {'type':'des articles','title':article.title, 'id':article.id, 'route':'admin_article_delete'} %}  #}
                    {% endfor %}
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}
