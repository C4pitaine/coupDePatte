{% extends 'admin/base.html.twig' %}

{% block title %}Suivi{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="mt-5 mb-3">Gestion des Suivis</h1>
            {% include "admin/partials/_search.html.twig" %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>Animal</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for suivi in pagination.data %}
                        <tr>
                            <td>{{suivi.id}}</td>
                            <td>{{suivi.description}}</td>
                            <td>{{suivi.animal}}</td>
                            <td class="text-center"> 
                                <a href="{{path('admin_suivi_show',{'id':suivi.id})}}" class="btn btn-primary mb-2"><i class="fas fa-eye"></i></a>
                                <div class="btn btn-danger deleteButton mb-2"><i class="fas fa-trash"></i></div>
                            </td>
                        </tr>
                        {% include "admin/partials/deleteAlert.html.twig" with {'type':'des suivis','title':"Le suivi de " ~ suivi.animal, 'id':suivi.id, 'route':'admin_suivi_delete'} %}
                    {% endfor %}
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}
