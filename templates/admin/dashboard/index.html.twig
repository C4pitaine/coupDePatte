{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="mt-5 mb-5">Dashboard</h1>
            <h2 class="mt-5 mb-3">Notifications :</h2>
            <div class="d-flex justify-content-between w-100 alert alert-danger">
                {% if messageNotSeen %}
                    <h4>Vous avez {{messageNotSeen}} messages non vus</h4>
                {% endif %}
                <div>
                    <a href="{{path('admin_contact_index')}}" class="btn btn-info block">Voir</a>
                </div>
            </div>
            <div class="d-flex justify-content-between w-100 alert alert-success">
                {% if adoption %}
                    <h4>Vous avez {{adoption}} demandes d'adoption</h4>
                {% endif %}
                <div>
                    <a href="{{path('admin_adoption_index')}}" class="btn btn-warning block">Voir</a>
                </div>
            </div>
            <div class="d-flex justify-content-between w-100 alert alert-warning">
                {% if user %}
                    <h4>Vous avez {{user}} utilisateurs inscrits</h4>
                {% endif %}
            </div>
            <h2 class="mt-5 mb-3">Argent récolté : {% if totalArgent %}{{totalArgent}}€{% endif %}</h2>
            <div class="d-flex justify-content-between w-100 alert alert-success">
                {% if totalDonation %}
                    <h4>Vous avez récolté {{totalDonation}}€ de dons</h4>
                {% endif %}
            </div>
            <div class="d-flex justify-content-between w-100 alert alert-warning">
                {% if totalCart %}
                    <h4>Vous avez récolté {{totalCart}}€ avec les commandes de friandises</h4>
                {% endif %}
            </div>
            <div class="d-flex justify-content-between w-100 alert alert-info">
                {% if countParrainage and totalParrainage %}
                    <h4>Vous avez actuellement {{countParrainage}} parrainage pour un total de {{totalParrainage}}€</h4>
                {% endif %}  
            </div>
        </div>  
    </div>
{% endblock %}
