{% extends "admin/base.html.twig" %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <a href="{{path('admin_contact_index')}}" class="btn btn-secondary mt-5">Retour</a>
            <h5 class="mt-5">Message de {{contact.lastName}} {{contact.firstName}} </h5>
            <h6 class="mt-3 mb-5">Email : {{contact.email}}</h6>
            <h7 class="mt-5">Message :</h7>
            <p class="mt-2">{{contact.message}}</p>
            <form action="" method="POST" class="d-flex flex-column">
                <label for="send" class="mb-3">Répondre :</label>
                {% if error %}
                    <p class="text-danger">{{error}}</p>
                {% endif %}
                
                <textarea name="send" id="send"  placeholder="Votre réponse au message" rows="10" style="resize:none"></textarea>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success mt-3">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}