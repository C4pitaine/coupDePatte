{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="slide" id="home">
        <div class="left">
            <div class="wrapper">
                <h3>Coup de Patte</h3>
                <img src="logo/Union.png" alt="Logo de Coup de Patte">
                <p>Chez Coup de Patte,chaque chien, chat, hamster trouve une nouvelle chance et beaucoup d'amour.</p>
                <p>Offrez-leur un foyer, ils vous offriront un ami pour la vie !</p>
                <a href="#contact" class="backButton">Nous contacter</a>
            </div>
        </div>
        <div class="right"></div>
    </div>
    <div class="slide" id="pres">
    
    </div>
    <div class="slide" id="pensionnaires">

    </div>
    <div class="slide" id="slideContact">
        <div class="left">
            <div class="title">
                <h3>Coup de Patte</h3>
                <img src="logo/Union.png" alt="Logo de Coup de Patte">
            </div>
        </div>
        <div class="right">
            <div class="wrapper">
                <h4>Contact</h4>
                {% for label, messages in app.flashes %}
                    <div class="container mt-3">
                        <div class="alert alert-{{label}}">
                            {% for message in messages %}
                                <p>{{ message | raw }}</p>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                <div class="formulaireContact">
                    {{form_start(formContact,{"action":path('home',{"_fragment":"slideContact"}),"method":"POST"})}}
                        {{form_widget(formContact)}}
                        <div class="d-flex justify-content-center">
                            <button class="boutonContact">Envoyer</button>
                        </div>
                    {{form_end(formContact)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
